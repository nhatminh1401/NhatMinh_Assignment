@page
@model app.Pages.OrdersModel
@{
}
 <h3>Orders</h3>

 <br/>
 <table class="table">
     <thread>
         <tr>
             <th>
                 Id
             </th>
             <th>
                 Pizza Name
             </th>
             <th>
                 Price
             </th>
         </tr>
     </thread>
     <tbody>
         @foreach (var order in Model.PizzaOrders)
         {
             <tr>
                 <td>
                     @order.Id
                 </td>
                 <td>
                     @order.PizzaName
                 </td>
                 <td>
                     @order.BasePrice
                 </td>
             </tr>
         }
     </tbody>
 </table>